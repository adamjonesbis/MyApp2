<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".info">

    <GridLayout
        android:layout_width="329dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="32dp"
        android:columnCount="1"
        android:rowCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Button
            android:id="@+id/button2"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity=""
            android:layout_margin="5sp"
            android:background="@drawable/roundbutton"
            android:drawableTop="@drawable/baseline_insert_chart_24"
            android:drawablePadding="50sp"
            android:insetLeft="0dp"
            android:text="HACCP"
            android:textColor="@color/tanAccent"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button4"

            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity=""
            android:layout_margin="5sp"
            android:background="@drawable/roundbutton"
            android:drawableTop="@drawable/baseline_thermostat_24"
            android:text="Temps"
            android:textColor="@color/tanAccent"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button5"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="5sp"
            android:background="@drawable/roundbutton"
            android:drawableTop="@drawable/baseline_insert_link_24"
            android:text="Useful Links"
            android:textColor="@color/tanAccent"
            android:textSize="18sp"
            android:textStyle="bold" />




    </GridLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="308dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:text="Information"
        android:textAlignment="center"
        android:textColor="@color/blueBlack"
        android:textSize="40dp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>