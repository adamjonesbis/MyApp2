<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    >
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10sp"
        android:columnCount="2"
        android:rowCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <Button
            android:id="@+id/button1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="5sp"
            android:background="#ffffff"
            android:drawableLeft="@drawable/ic_baseline_change_circle_24"
            android:text="Changeover"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="5sp"
            android:background="#ffffff"
            android:drawableLeft="@drawable/ic_baseline_fastfood_24"
            android:text="Prep"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button3"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="5sp"
            android:background="#ffffff"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:text="Roster"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button4"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="5sp"
            android:background="#ffffff"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:text="Categories"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button5"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="5sp"
            android:background="#ffffff"
            android:drawableLeft="@drawable/ic_baseline_qr_code_scanner_24"
            android:text="Batch Codes"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button6"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="5sp"
            android:background="#ffffff"
            android:drawableLeft="@drawable/ic_baseline_add_24"
            android:drawablePadding="10dp"
            android:text="Checklists"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button8"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="5sp"
            android:background="#ffffff"
            android:drawableLeft="@drawable/ic_baseline_supervisor_account_24"
            android:text="my Account"
            android:textSize="18sp" />




    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>