<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".HomeActivity">

    <GridLayout
        android:layout_width="382dp"
        android:layout_height="733dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:columnCount="2"
        android:rowCount="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="5sp"
            android:background="#ffffff"
            android:drawableLeft="@drawable/ic_baseline_change_circle_24"
            android:text="Changeover"
            android:textColor="@color/tanAccent"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="5sp"
            android:background="#ffffff"
            android:drawableLeft="@drawable/ic_baseline_fastfood_24"
            android:text="Prep"
            android:textColor="@color/tanAccent"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button3"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="5sp"
            android:background="#ffffff"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:text="Roster"
            android:textColor="@color/tanAccent"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button4"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="5sp"
            android:background="@color/blueBlack"
            android:drawableLeft="@drawable/baseline_menu_book_24"
            android:text="Recipes"
            android:textColor="@color/tanAccent"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button5"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="5sp"
            android:background="#ffffff"
            android:drawableLeft="@drawable/ic_baseline_qr_code_scanner_24"
            android:text="Batch Codes"
            android:textColor="@color/tanAccent"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button6"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="5sp"
            android:background="#ffffff"
            android:drawableLeft="@drawable/ic_baseline_add_24"
            android:drawablePadding="10dp"
            android:text="Checklists"
            android:textColor="@color/tanAccent"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button8"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="5sp"
            android:background="#ffffff"
            android:drawableLeft="@drawable/ic_baseline_supervisor_account_24"
            android:text="my Account"
            android:textColor="@color/tanAccent"
            android:textSize="18sp"
            android:textStyle="bold" />


    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>